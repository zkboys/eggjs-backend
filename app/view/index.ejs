<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Egg</title>
    <!-- CSS only -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <style>
        .content {
            display: flex;
            height: 100vh;
        }

        .login {
            flex: 0 0 25%;
            padding: 20px;
        }

        .register {
            flex: 0 0 25%;
            border-left: 1px solid #e8e8e8;
            border-right: 1px solid #e8e8e8;
        }

        .api {
            flex: 1;
        }

        .content button {
            margin: 10px;
        }
    </style>
</head>
<body>
<div class="content">
    <div class="login">
        <form>
            <div class="form-group">
                <label for="username">用户名</label>
                <input id="username" class="form-control" placeholder="请输入用户名" value="admin">
            </div>
            <div class="form-group">
                <label for="password">密码</label>
                <input id="password" type="password" class="form-control" placeholder="请输入密码" value="123456">
            </div>
            <button id="login" type="submit" class="btn btn-primary">登 录</button>
            <button id="register" type="submit" class="btn btn-success">注册</button>
        </form>

        <form>
            <div class="form-group">
                <label for="oldPassword">原密码</label>
                <input id="oldPassword" type="password" class="form-control" placeholder="请输入密码" value="123456">
            </div>
            <div class="form-group">
                <label for="newPassword">新密码</label>
                <input id="newPassword" type="password" class="form-control" placeholder="请输入密码" value="123456">
            </div>
            <button id="modifyPassword" type="submit" class="btn btn-primary">修改密码</button>
        </form>
    </div>
    <div class="register">

    </div>
    <div class="api">
        <button id="getUserList" type="button" class="btn btn-primary">获取用户列表</button>
        <div class="console"></div>
    </div>
</div>
<!-- JS, Popper.js, and jQuery -->
<script src="https://cdn.bootcdn.net/ajax/libs/jquery/3.5.1/jquery.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

<script src="/public/index.js"></script>
<script>
    $('#getUserList').on('click', function() {
        $.ajax({
            url: '/api/users',
            success: function(res) {
                console.log(res);
            }
        })
    })
    $('#login').on('click', function(e) {
        e.preventDefault();
        const username = $('#username').val();
        const password = $('#password').val();

        $.ajax({
            url: '/api/login',
            method: 'post',
            data: { username, password },
            success: function(res) {
                console.log(res);
            }
        })
    })

    $('#register').on('click', function(e) {
        e.preventDefault();
        const username = $('#username').val();
        const password = $('#password').val();

        $.ajax({
            url: '/api/register',
            method: 'post',
            data: { username, password },
            success: function(res) {
                console.log(res);
            }
        })
    })
    $('#modifyPassword').on('click', function(e) {
        e.preventDefault();
        const oldPassword = $('#oldPassword').val();
        const password = $('#newPassword').val();

        $.ajax({
            url: '/api/usersPassword',
            method: 'put',
            data: { oldPassword, password },
            success: function(res) {
                console.log(res);
            }
        })
    })
</script>
</body>
</html>
